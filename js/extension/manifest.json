{
    "manifest_version": 3,
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "1.0",
    "default_locale": "en",
    "homepage_url": "https://github.com/gjp0609/Scripts/tree/master/js/extension/",
    "icons": {
        "48": "common/icons/history.svg",
        "96": "common/icons/history.svg"
    },
    "action": {
        "default_icon": "common/icons/history.svg",
        "default_title": "__MSG_extensionName__"
    },
    "background": {
        "page": "common/background.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
    },
    "options_ui": {
        "browser_style": false,
        "open_in_tab": true,
        "page": "history/index.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "histories@noif.fun"
        }
    },
    "permissions": ["downloads", "history", "menus", "storage", "tabs", "unlimitedStorage"]
}
